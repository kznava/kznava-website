---
import { NAV_LINKS, SOCIAL_LINKS } from '@/consts'
import Link from './Link.astro'
import SocialIcons from './SocialIcons.astro'
---

<footer
  class="border-t border-[#0066ff]/10 bg-gradient-to-t from-[#0066ff]/[0.02] to-transparent pt-8 dark:border-[#338aff]/10 dark:from-[#0066ff]/[0.05]"
>
  <div
    class="mx-auto mb-8 flex w-full max-w-3xl flex-col items-center justify-center gap-6 px-4"
  >
    <!-- Navigation Links -->
    <nav class="flex flex-wrap items-center justify-center gap-4 text-sm">
      {
        NAV_LINKS.map((link) => (
          <Link
            href={link.href}
            class="text-muted-foreground hover:text-[#0066ff] capitalize transition-colors dark:hover:text-[#338aff]"
          >
            {link.label}
          </Link>
        ))
      }
    </nav>

    <!-- Separator -->
    <div class="h-px w-full max-w-xs bg-gradient-to-r from-transparent via-[#0066ff]/20 to-transparent dark:via-[#338aff]/20"></div>

    <!-- Copyright & Social -->
    <div class="flex flex-col items-center gap-4 sm:flex-row sm:justify-between sm:w-full">
      <span class="text-muted-foreground text-sm">
        &copy; {new Date().getFullYear()} kznava. All rights reserved.
      </span>
      <SocialIcons links={SOCIAL_LINKS} />
    </div>
  </div>
</footer>
