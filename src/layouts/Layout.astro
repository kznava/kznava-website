---
import '@/styles/global.css'
import '@/styles/typography.css'

import BackToTop from '@/components/BackToTop.astro'
import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import { SITE } from '@/consts'
import { cn } from '@/lib/utils'

interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<!doctype html>
<html
  class="bg-background text-foreground scheme-light-dark"
  lang={SITE.locale}
>
  <Head>
    <slot name="head" />
  </Head>
  <body class="flex h-fit min-h-screen flex-col gap-y-6 font-sans relative">
    <!-- Animated Background -->
    <div 
      class="fixed inset-0 -z-10 overflow-hidden pointer-events-none" 
      transition:persist="animated-background"
    >
      <div class="animated-bg-gradient" transition:persist="bg-gradient"></div>
      <div class="animated-blob blob-1" transition:persist="blob-1"></div>
      <div class="animated-blob blob-2" transition:persist="blob-2"></div>
      <div class="animated-blob blob-3" transition:persist="blob-3"></div>
    </div>

    <header
      class="bg-background/80 sticky top-0 z-50 divide-y backdrop-blur-md xl:divide-none border-b border-blue-100/20 dark:border-blue-900/20"
    >
      <Header />
      <slot name="subposts-navigation" />
      <slot name="table-of-contents" />
    </header>
    <main
      class={cn('w-full mx-auto flex grow flex-col gap-y-6 px-4 relative z-10', className)}
    >
      <slot />
    </main>
    <Footer />
    <BackToTop />
  </body>
</html>
