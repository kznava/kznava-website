---
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="404 - Page Not Found" />

  <section
    class="flex min-h-[60vh] flex-col items-center justify-center gap-y-8 py-16 text-center"
  >
    <!-- Large 404 Number -->
    <div class="relative">
      <div class="absolute inset-0 blur-3xl opacity-30">
        <div class="bg-gradient-to-r from-[#0066ff] to-[#338aff] h-full w-full"></div>
      </div>
      <h1 class="relative text-9xl font-bold bg-gradient-to-r from-[#0066ff] to-[#338aff] bg-clip-text text-transparent dark:from-[#338aff] dark:to-[#66a3ff]">
        404
      </h1>
    </div>

    <!-- Icon -->
    <div class="flex size-20 items-center justify-center rounded-full bg-gradient-to-br from-[#0066ff] to-[#338aff] shadow-lg shadow-[#0066ff]/30">
      <Icon name="lucide:search-x" class="size-10 text-white" />
    </div>

    <!-- Message -->
    <div class="max-w-md space-y-3">
      <h2 class="text-3xl font-bold">Page Not Found</h2>
      <p class="text-muted-foreground text-lg">
        Oops! The page you're looking for doesn't exist or has been moved.
      </p>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-wrap justify-center gap-3">
      <Link
        href="/"
        class={buttonVariants({ variant: 'default' }) +
          ' group bg-gradient-to-r from-[#0066ff] to-[#0052cc] hover:from-[#0052cc] hover:to-[#003d99] shadow-lg shadow-[#0066ff]/30'}
      >
        <Icon name="lucide:home" class="mr-2 size-4" />
        Go Home
      </Link>
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'outline' }) +
          ' group border-[#0066ff]/30 hover:border-[#0066ff]/50 hover:bg-[#0066ff]/5 dark:border-[#338aff]/30 dark:hover:border-[#338aff]/50'}
      >
        <Icon name="lucide:book-open" class="mr-2 size-4" />
        Read Blog
      </Link>
      <Link
        href="/projects"
        class={buttonVariants({ variant: 'outline' }) +
          ' group border-[#0066ff]/30 hover:border-[#0066ff]/50 hover:bg-[#0066ff]/5 dark:border-[#338aff]/30 dark:hover:border-[#338aff]/50'}
      >
        <Icon name="lucide:folder-git-2" class="mr-2 size-4" />
        View Projects
      </Link>
    </div>
  </section>
</Layout>
